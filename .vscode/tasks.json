{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/Blockfrost.sln",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build",
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Blockfrost.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build",
    },
    {
      "label": "rebuild",
      "dependsOn": [
        "clean",
        "build"
      ],
      "dependsOrder": "sequence",
      "group": "build",
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/Blockfrost.sln"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "fix style (errors)",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "format",
        "-ws error"
      ]
    },
    {
      "label": "fix style (warnings)",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "format",
        "-ws warn"
      ]
    },
    {
      "label": "fix style (infos)",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "format",
        "-ws info"
      ]
    }
  ]
}
